public class Array {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//Queremos mostrar las personas que hay en cada aula, teniendo 4 aulas.
		
		int aula[]= new int[4];
		
		aula [0] = 20;
		aula [1] = 21;
		aula [2] = 18;
		aula [3] = 20;
	
	//Aplicamos las personas a cada aula y por ejemplo vemos cuantas tiene el aula 3 (que sería el número 2 del array)
		
		System.out.println("El Aula Nº 3 tiene "+aula[2]+" Alumnos");
		
	}

}
